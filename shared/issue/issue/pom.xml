<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.maven.issue</groupId>
  <artifactId>issue</artifactId>
  <packaging>pom</packaging>
  <name>Maven Issue</name>
  <version>1-SNAPSHOT</version>
  <description>Issue Management System API</description>
  <issueManagement>
    <system>jira</system>
    <url>http://jira.codehaus.org/browse/ISSUE</url>
  </issueManagement>
  <ciManagement>
    <system>issue-dev@maven.apache.org</system>
    <notifiers>
      <notifier>
        <address>issue-dev@maven.apache.org</address>
      </notifier>
    </notifiers>
  </ciManagement>
  <inceptionYear>2003</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>Maven issue User List</name>
      <subscribe>issue-users-subscribe@maven.apache.org</subscribe>
      <unsubscribe>issue-users-unsubscribe@maven.apache.org</unsubscribe>
      <archive>http://nagoya.apache.org/eyebrowse/SummarizeList?listName=issue-users@maven.apache.org</archive>
    </mailingList>
    <mailingList>
      <name>Maven Issue Developer List</name>
      <subscribe>issue-dev-subscribe@maven.apache.org</subscribe>
      <unsubscribe>issue-dev-unsubscribe@maven.apache.org</unsubscribe>
      <archive>http://nagoya.apache.org/eyebrowse/SummarizeList?listName=issue-dev@maven.apache.org</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>jvanzyl</id>
      <name>Jason van Zyl</name>
      <email>jason@maven.org</email>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:svn:http://svn.apache.org/repos/asf/maven/issue/trunk/</connection>
    <developerConnection>scm:svn:https://svn.apache.org/repos/asf/maven/issue/trunk/</developerConnection>
    <url>http://svn.apache.org/viewcvs.cgi/maven/issue/</url>
  </scm>
  <organization>
    <name>Apache Software Foundation</name>
    <url>http://www.apache.org/</url>
  </organization>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <tagBase>https://svn.apache.org/repos/asf/maven/issue/tags</tagBase>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <modules>
    <module>issue-management-provider-api</module>
    <module>issue-management-providers</module>
  </modules>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.maven.issue</groupId>
        <artifactId>issue-management-provider-api</artifactId>
        <version>1.0-SNAPSHOT</version>
      </dependency>
      <!--
      <dependency>
        <groupId>org.apache.maven.issue</groupId>
        <artifactId>issue-provider-test</artifactId>
        <version>1.0-SNAPSHOT</version>
      </dependency>
      -->
    </dependencies>
  </dependencyManagement>
  <distributionManagement>
    <repository>
      <id>repo1</id>
      <url>scp://beaver.codehaus.org/home/projects/maven/repository-staging/to-ibiblio/maven2</url>
    </repository>
    <snapshotRepository>
      <id>snapshots</id>
      <url>scp://beaver.codehaus.org/home/projects/maven/repository-staging/snapshots/maven2</url>
    </snapshotRepository>
  </distributionManagement>
</project>
